<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="vkSuite.ChatControl"
	x:Name="UserControl"
	d:DesignWidth="100" d:DesignHeight="100" Height="Auto">

	<Grid x:Name="LayoutRoot" Margin="0">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="20"/>
		</Grid.RowDefinitions>
		<ListBox Background="#FF430808" Grid.Row="0" d:LayoutOverrides="VerticalAlignment, GridBox"/>
		<GridSplitter HorizontalAlignment="Stretch" Height="4" VerticalAlignment="Top" Grid.Row="1" Margin="0,49.5,0,0"/>
		<TextBox TextWrapping="Wrap" Text="TextBox" Grid.Row="1" Margin="0"/>
	</Grid>
</UserControl>